<launch>

  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="/odom" />
  <arg name="move_forward_only" default="false"/>
 
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(find happy_robo)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find happy_robo)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    
    <rosparam file="$(find happy_robo)/params/map_nav_params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find happy_robo)/params/map_nav_params/global_costmap_params.yaml" command="load" />
    
    <!-- <rosparam file="$(find happy_robo)/params/base_local_planner_params.yaml" command="load" /> -->
    <rosparam file="$(find happy_robo)/params/move_base_params.yaml" command="load" />

    <!-- <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" /> -->
    <rosparam file="$(find happy_robo)/params/dwa_local_planner_params.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />

    <!-- <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/> -->
    
    <remap from="odom" to="odometry/filtered" />
  </node>

</launch>