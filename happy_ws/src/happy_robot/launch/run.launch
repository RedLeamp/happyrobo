  <!-- Launch Gazebo with the specified world -->

  <!-- <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" /> -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" />
    <param name="robot_description" command="$(find xacro)/xacro $(find happy_robo)/urdf/20250221.urdf.xacro" />
    <!-- </node> -->

    <!-- Control -->
    <!-- <include file="$(find happy_robo)/control/launch/control.launch" /> -->
    <node pkg="tf" type="static_transform_publisher" name="map_to_odom" args="0 0 0 0 0 0 map odom 10" />
    <node pkg="tf" type="static_transform_publisher" name="odom_to_base_link" args="0 0 0 0 0 0 odom base_link 10" />

  <!-- Rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find happy_robo)/launch/include/run.rviz" />
