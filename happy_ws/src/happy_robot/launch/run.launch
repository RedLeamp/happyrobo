<launch>
  <arg name="gui" default="true" />
  <arg name="headless" default="false" />
  <arg name="move_forward_only" default="false"/>
  <!-- <arg name="map_file" default="$(find happy_robo)/maps/map_new.yaml"/> -->
  <arg name="use_map_topic" default="false"/>
